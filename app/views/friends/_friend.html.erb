<div id="<%= dom_id friend %>" class="col-md-6">
  <p>
    <div class="h-100 p-5 text-bg-dark rounded-3">
      <strong>
      <h1><%= friend.first_name %> <%= friend.last_name %></h1>
      </strong>
    </p>

    <p>
      <strong>Email:</strong>
      <%= friend.email %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= friend.phone %>
    </p>

    <p>
      <strong>Twitter:</strong>
      <%= friend.twitter %>
    </p>
  </div>
</div>
